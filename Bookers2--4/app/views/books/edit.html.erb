<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<% if @book.errors.any? %>
				<div>
					<h3 style="color: red"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
					<ul>
						<% @book.errors.full_messages.each do|message| %>
						<li style="color: red"><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<div class="field">
					<%= f.label :title %><br>
					<%= f.text_field :title, size:"74" %>
				</div>
				<div class="field">
					<%= f.label :opinion %><br>
					<%= f.text_area :body, size:"76" %>
				</div>
				<%= f.submit "Update Book", class:"btn btn-block btn-primary" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			<%= link_to "Back", books_path %>
		</div>
	</div>
</div>