<div class="container">
	<div class="row">
		<div>
			<h2>User info</h2>
			<% if @user.errors.any? %>
				<div>
					<h3 style="color: red"><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
					<ul>
						<% @user.errors.full_messages.each do|message| %>
						<li style="color: red"><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<%= form_for(@user) do |f| %>
				<div class="field">
					<%= f.label :name %><br>
					<%= f.text_field :name %>
				</div>
				<div class="field">
					<%= f.label :image %><br>
					<%= f.attachment_field :profile_image, class:"user-edit-form" %>
				</div>
				<div class="field">
					<%= f.label :introduction %><br>
					<%= f.text_area :introduction %>
				</div>
			<%= f.submit "Update User", class:"btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>