<div class="container">
	<div class="row">
		<div class="col-xs-12" style="color: green">
			<% flash.each do |message_type, message| %>
				<%= content_tag :div, message, class: message_type %>
			<% end %>
		</div>
		<div class="col-xs-3">
			<%= render 'books/side', user:@user, book:@book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>
				<% @book_shows.each do |book_show| %>
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(@user.id) do %>
								 <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "noimage.jpg" %>
								 <% end %>
							</td>
							<td>
								<%= link_to book_show.title, book_path(book_show.id) %>
							</td>
							<td><%= book_show.body %></td>
					  	<td>
					  		<li>コメント数：
					  		<%= book_show.comments.count %>
					  		</li>
				  		</td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>